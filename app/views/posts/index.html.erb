<h1>Listing posts</h1>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= post.title %></h2>
      <div class="content"><%= post.post %></div>
      <div class="action">
        <%= link_to 'Edit', edit_post_path(post) if can? :edit, post %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } if can? :delete, post %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Post', new_post_path %>
